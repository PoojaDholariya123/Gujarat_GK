<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom Shadow / Border Layer -->
<!--    &lt;!&ndash; Light theme border (very soft blue) &ndash;&gt;-->
<!--    <stroke-->
<!--        android:width="1.2dp"-->
<!--        android:color="#D6E4FF"/>-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B0BEC5" /> <!-- Grey Shadow -->
            <corners android:radius="12dp" />
            <!-- Light theme border (very soft blue) -->
            <stroke
                android:width="1.2dp"
                android:color="#D6E4FF"/>
        </shape>
    </item>
    
    <!-- Top Gradient Layer -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
