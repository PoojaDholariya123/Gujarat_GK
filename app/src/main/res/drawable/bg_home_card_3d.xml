<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom Shadow / Border Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2C5E9E" /> <!-- Primary Blue (Shadow Color) -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Top Gradient Layer (Inset from bottom to show shadow) -->
    <item android:bottom="8dp"> <!-- Increased bottom inset for more visibility -->
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#FFFFFF"
                android:startColor="#D6EAF8"
                android:type="linear" />
            <corners android:radius="16dp" />
            <!-- Adding a subtle stroke to define the shape if white on white -->
            <stroke android:width="1dp" android:color="#B0C4DE" />
        </shape>
    </item>
</layer-list>
